      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const searchForm = document.getElementById("search-form");
          const searchInput = document.getElementById("search-input");
          const searchResults = document.getElementById("search-results");
      
          searchForm.addEventListener("submit", function (e) {
            e.preventDefault(); // Prevent the form from submitting and refreshing the page
      
            const searchTerm = searchInput.value.toLowerCase();
      
            // Loop through the card titles and check if they contain the search term
            const cardTitles = document.querySelectorAll(".card-title");
            let matchingCards = [];
      
            cardTitles.forEach(function (cardTitle) {
              const titleText = cardTitle.textContent.toLowerCase();
              if (titleText.includes(searchTerm)) {
                matchingCards.push(cardTitle.parentElement.parentElement);
              }
            });
      
            // Display the matching cards or a message if no results are found
            if (matchingCards.length > 0) {
              searchResults.innerHTML = ""; // Clear previous results
      
              matchingCards.forEach(function (card) {
                searchResults.appendChild(card.cloneNode(true)); // Append matching cards to the results div
              });
            } else {
              searchResults.innerHTML = "<p>No results found.</p>";
            }
          });
        });
      </script>
             

   
